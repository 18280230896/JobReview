<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.llg.mapper.SubjectMapper">
	<resultMap type="Subject" id="subject">
		<id property="id" column="subject_id"/>
		<result property="name" column="subject_name"/>
		<association property="task" javaType="Task">
			<id property="id" column="task_id"/>
		</association>
	</resultMap>
	
	<insert id="addSubject" parameterType="Subject">
		insert into t_subject values(null,#{task.id},#{name})
	</insert>
	
	<delete id="deleteSubject" parameterType="Integer">
		delete from t_subject where subject_id = #{id}
	</delete>
	
	<update id="updateSubject" parameterType="Subject">
		update t_subject set subject_name=#{name} where subject_id = #{id}
	</update>
	
	<select id="getSubjectById" parameterType="Integer" resultMap="subject">
		select * from t_subject where subject_id = #{id}
	</select>
	
	<select id="getSubjectLsit" parameterType="Integer" resultMap="subject">
		select * from t_subject where task_id = #{id}
	</select>
</mapper>