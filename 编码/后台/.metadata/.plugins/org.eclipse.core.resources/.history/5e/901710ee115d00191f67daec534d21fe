<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.llg.mapper.ClassMapper">
	<resultMap type="Class" id="c">
		<id property="id" column="class_id"/>
		<result property="name" column="class_name"/>
		<result property="semester" column="class_semester"/>
		<association property="teacher" javaType="Teacher">
			<id property="id" column="teacher_id"/>
		</association>
	</resultMap>
	
	<select id="getClassTotal" parameterType="Integer" resultType="Integer">
		select count(class_id) from t_class where teacher_id =#{id}
	</select>
	
	<select id="getClassList" parameterType="Integer" resultMap="c">
		select * from t_class 
		where teacher_id=#{0} 
		order by class_id desc
		limit #{1},#{2}
	</select>
	
	<insert id="addClass" parameterType="Class">
		insert into t_class values(null,#{teacher.id},#{name})
	</insert>
	
	<delete id="deleteClass" parameterType="Integer">
		delete from t_class where class_id=#{id}
	</delete>
	
	<update id="updateClass" parameterType="Class">
		update t_class set class_name = #{name} where class_id=#{id}
	</update>
	
	<select id="getClassById" parameterType="Integer" resultMap="c">
		select * from t_class where class_id = #{id}
	</select>
</mapper>