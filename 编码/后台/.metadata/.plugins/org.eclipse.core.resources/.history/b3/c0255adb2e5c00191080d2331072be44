var javaEditor = CodeMirror.fromTextArea(document.getElementById("code"), {
            lineNumbers: true,
            matchBrackets: true,
            mode: "text/x-java"
        });
$("#run").click(function(){
	var code = javaEditor.getValue();
	$.ajax({
		url:"run.action",
		type:"post",
		dataType:"json",
		data:{"code":code},
		success:function(result){
			if(result.status == 1){
				$(".console").append($("<p class='err'>"+result.err+"</p>")).append($("<p class='out'>"+result.out+"</p>"));
			}else{
				console.log(result.msg);
			}
		}
	});
});