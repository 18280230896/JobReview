<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.llg.mapper.AdminMapper">
	<resultMap type="Admin" id="admin">
		<id property="id" column="admin_id"/>
		<result property="name" column="admin_name"/>
		<result property="username" column="admin_uname"/>
		<result property="password" column="admin_password"/>
		<result property="role" column="role"/>
	</resultMap>
	<select id="getAdminById" parameterType="Integer" resultMap="admin">
		select * from t_admin where admin_id=#{id}
	</select>
	<update id="updateInfo" parameterType="User">
		update t_admin 
		set admin_name=#{name},admin_uname=#{username},admin_password=#{password}
		where admin_id=#{id}
	</update>
</mapper>