<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.llg.mapper.TaskMapper">
	<resultMap type="Task" id="task">
		<id property="id" column="task_id"/>
		<result property="name" column="task_name"/>
		<result property="type" column="task_type"/>
		<association property="teacher" javaType="Teacher">
			<id property="id" column="teacher_id"/>
		</association>
	</resultMap>
	
	<insert id="addTask" parameterType="Task">
		<selectKey keyProperty="id" order="AFTER" resultType="Integer">
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into t_task values(null,#{teacher.id},#{name},#{type})
	</insert>
	
	<delete id="deleteTask" parameterType="Integer">
		delete from t_task where task_id = #{id}
	</delete>
	
	<update id="updateTask" parameterType="Task">
		udpate t_task set task_name=#{name},task_type=#{type} where task_id=#{id}
	</update>
	
	<select id="getTaskById" parameterType="Integer" resultMap="task">
		select * from t_task where task_id=#{id}
	</select>
	
	<select id="getTaskTotal" parameterType="Integer" resultType="Integer">
		select count(*) from t_task where teacher_id = #{id}
	</select>
	
	<select id="getTaskList" parameterType="Integer" resultMap="task">
		select * from t_task 
		where teacher_id = #{0}
		order by task_id desc
		limit #{1},#{2}
	</select>
</mapper>